<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Welcome</h1>
It's <%= Time.now %>
We have <%= pluralize(@total_orders, "order") %>.

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<tr>
        <td><b>Shopper Name</b></td>
        <td><b>Payment Type</b></td>
      </tr>
    <% @all_orders.each do |order| %>
      <tr>
        <td><%= order.name%></td>
        <td><%= order.paytype %></td>
      </tr>
    <% end %>
  </tbody>
</table>